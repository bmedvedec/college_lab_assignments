<!DOCTYPE html>
<html>

<%- include(`partials/head`); %>

<body class="content">

    <%- include(`partials/header`); %>

    <main class="main">

        <!-- INSERT CODE HERE -->

        <!-- POMOĆNI KOD
        <div class="photo-box" data-id="1">
            <img class="photo-box-image" src="https://i.imgur.com/Ttir6mp.jpg"></img>
            <div class="photo-box-title font-secondary main-color-emphasized">
                <a class="link" href="../item/1">Tulip</a>
            </div>
        </div>
                    
        <div class="photo-box" data-id="1">
            <img class="photo-box-image" src="https://i.imgur.com/gH33WyT.jpg"></img>
            <div class="photo-box-title font-secondary main-color-emphasized">
                <a class="link" href="../item/2">Lavender</a>
            </div>
        </div> 
    -->
        <% var counter = 0 %> 
        <section class="section">
            <% for (let category of categories) { %>
                <div class="container-grid centered-container <%= (counter % 2 === 0) ? 'secondary-color-bg' : 'primary-color-bg' %>">
                    <% counter++ %> 
                    <div>
                        <h1 class="font-secondary main-color"><span class="main-color-emphasized"><%= category.name %></span> Inventory</h1>
                        <div class="separator"></div>
                        <div class="gallery">
                            <% let noItems = true %> 
                            <% for (let item of items) { %>
                                <% console.log(item) %> 
                                <% if (item.categoryId === category.id) { %> 
                                    <% noItems = false %> 
                                    <div class="photo-box" data-id="<%= category.id %>">
                                        <img class="photo-box-image" src="<%= item.imageUrl %>"></img>
                                        <div class="photo-box-title font-secondary main-color-emphasized">
                                            <a class="link" href="../item/<%= item.id %>"><%= item.name %></a>
                                        </div>
                                    </div>
                                <% } %>
                            <% } %>
                        </div>
                        <% if (noItems) { %>  
                            <h2 class="font-secondary main-color">No items in this category</h2>
                        <% } %> 
                    </div>
                </div>
            <% } %>
        </section>

    </main>

    <%- include(`partials/footer`); %>

</body>

</html>